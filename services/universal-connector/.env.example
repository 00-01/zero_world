# Universal Connector environment variables

# Redis connection
REDIS_URL=redis://localhost:6379

# PostgreSQL connection  
DATABASE_URL=postgres://localhost/zero_world

# API Keys (get from respective services)
GOOGLE_API_KEY=your-google-api-key-here
OPENWEATHER_API_KEY=your-openweather-api-key-here
NEWS_API_KEY=your-newsapi-key-here
BING_API_KEY=your-bing-api-key-here

# Cache configuration
CACHE_L1_SIZE_MB=256
CACHE_L1_TTL_SECS=300
CACHE_L2_TTL_SECS=3600

# Performance tuning
MAX_PARALLEL_REQUESTS=50
GLOBAL_TIMEOUT_MS=1000
WORKER_THREADS=8

# Logging
RUST_LOG=universal_connector=info,tower_http=info
