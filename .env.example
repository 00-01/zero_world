# Environment Variables Template
# Copy to .env and fill in values

# ============================================
# APPLICATION
# ============================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
SECRET_KEY=your-super-secret-key-change-this-in-production

# ============================================
# DATABASES
# ============================================
# MongoDB
MONGODB_URL=mongodb://username:password@mongodb:27017/zero_world?authSource=admin
MONGODB_DATABASE=zero_world
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-password

# PostgreSQL (for Kong API Gateway)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=kong
POSTGRES_USER=kong
KONG_PG_PASSWORD=change-this-password

# Redis
REDIS_URL=redis://:password@redis:6379/0
REDIS_PASSWORD=change-this-password

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTIC_PASSWORD=change-this-password

# RabbitMQ
RABBITMQ_URL=amqp://user:password@rabbitmq:5672/
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=change-this-password

# ============================================
# JWT & AUTHENTICATION
# ============================================
JWT_SECRET=your-jwt-secret-256-bit-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================
# OAUTH PROVIDERS
# ============================================
# Google OAuth
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_REDIRECT_URI=https://www.zn-01.com/auth/google/callback

# Facebook OAuth
OAUTH_FACEBOOK_CLIENT_ID=your-facebook-app-id
OAUTH_FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
OAUTH_FACEBOOK_REDIRECT_URI=https://www.zn-01.com/auth/facebook/callback

# Apple OAuth
OAUTH_APPLE_CLIENT_ID=your-apple-service-id
OAUTH_APPLE_TEAM_ID=your-apple-team-id
OAUTH_APPLE_KEY_ID=your-apple-key-id
OAUTH_APPLE_PRIVATE_KEY=path/to/apple-private-key.p8

# ============================================
# PAYMENT GATEWAYS
# ============================================
# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_MODE=live  # or 'sandbox' for testing
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# ============================================
# CLOUD STORAGE (AWS S3)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=zero-world-media-production
S3_CDN_URL=https://cdn.zn-01.com

# ============================================
# NOTIFICATION SERVICES
# ============================================
# Firebase Cloud Messaging (Push Notifications)
FIREBASE_CREDENTIALS=path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=zero-world-prod

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@zn-01.com
SENDGRID_FROM_NAME=Zero World

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=Zero World Production

# Datadog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-password

# ============================================
# API RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=50000
RATE_LIMIT_PER_DAY=1000000

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_SOCIAL_ENABLED=true
FEATURE_MARKETPLACE_ENABLED=true
FEATURE_PAYMENTS_ENABLED=true
FEATURE_MESSAGING_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=false  # Coming soon
FEATURE_AI_RECOMMENDATIONS_ENABLED=false  # Coming soon

# ============================================
# CORS & SECURITY
# ============================================
CORS_ORIGINS=https://www.zn-01.com,https://app.zn-01.com
CORS_ALLOW_CREDENTIALS=true
TRUSTED_HOSTS=www.zn-01.com,api.zn-01.com

# ============================================
# CDN & CACHING
# ============================================
CDN_URL=https://cdn.zn-01.com
CACHE_DEFAULT_TTL=3600
CACHE_MAX_TTL=86400

# ============================================
# EXTERNAL APIS
# ============================================
# Maps (Google Maps / Mapbox)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Translation (Google Translate)
GOOGLE_TRANSLATE_API_KEY=your-translate-api-key

# Weather API
OPENWEATHER_API_KEY=your-openweather-api-key

# ============================================
# BLOCKCHAIN (Future)
# ============================================
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
WALLET_CONTRACT_ADDRESS=0x...

# ============================================
# MACHINE LEARNING
# ============================================
ML_MODEL_ENDPOINT=https://ml.zn-01.com/predict
ML_API_KEY=your-ml-api-key

# ============================================
# BACKUP & DISASTER RECOVERY
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=zero-world-backups

# ============================================
# KUBERNETES (for K8s deployments)
# ============================================
K8S_NAMESPACE=zero-world-production
K8S_CLUSTER_NAME=zero-world-prod-cluster
K8S_SERVICE_ACCOUNT=zero-world-sa

# ============================================
# SLACK NOTIFICATIONS
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#zero-world-alerts

# ============================================
# ANALYTICS
# ============================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-api-key

# ============================================
# COMPLIANCE & LEGAL
# ============================================
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=365
COOKIE_CONSENT_REQUIRED=true

# ============================================
# PERFORMANCE
# ============================================
MAX_CONNECTIONS_PER_SERVICE=1000
CONNECTION_POOL_SIZE=100
QUERY_TIMEOUT_SECONDS=30
REQUEST_TIMEOUT_SECONDS=30
MAX_UPLOAD_SIZE_MB=50

# ============================================
# SCALING
# ============================================
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=10
MAX_REPLICAS=100
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80
